---
import { getCollection } from "astro:content";
import Layout from "@/layouts/LayoutPlain.astro";
const projects = await getCollection("video");
---
<Layout title="Artwork" hideAll background="black">
  <div class="pb-10 h-screen pt-10">
    {
      projects.map((piece) => (
        <div class="pb-10">
          <video
            class="m-auto rounded-xl"
            controls=""
            poster={piece.data.poster}
            src={piece.data.src}
          >
          <script is:inline>
            var video = document.currentScript.parentElement;
            video.volume = 0.1;
          </script>
          </video>
        </div>
      ))
    }
  </div>
</Layout>
